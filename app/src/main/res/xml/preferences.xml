<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <Preference
        app:key="header"
        app:title="@string/label_setting"
        app:summary="@string/label_setting_msg"
        app:selectable="false"/>

    <ListPreference
        android:key="app_language"
        android:title="@string/label_language"
        android:entries="@array/language_options_array"
        android:entryValues="@array/language_values_array"
        android:defaultValue="en"
        app:useSimpleSummaryProvider="true"
        app:iconSpaceReserved="false"/>
</PreferenceScreen>